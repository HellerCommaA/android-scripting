<?xml version="1.0" encoding="utf-8"?>
<manifest
  xmlns:android="http://schemas.android.com/apk/res/android"
  package="com.googlecode.jrubyforandroid"
  android:versionCode="1"
  android:versionName="1.0">
  <application
    android:icon="@drawable/icon"
    android:label="@string/app_name">
    <activity
      android:name=".JRubyMain"
      android:label="@string/app_name" android:configChanges="keyboardHidden|orientation" android:finishOnTaskLaunch="true">
      <intent-filter>
        <action
          android:name="android.intent.action.MAIN" />
        <category
          android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
      <intent-filter>
        <action
          android:name="com.google.ase.DISCOVER_INTERPRETERS" />
        <category
          android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>
    <provider
      android:authorities="com.googlecode.jrubyforandroid.jrubyprovider"
      android:name=".JRubyProvider" />
  </application>
  <uses-sdk
    android:minSdkVersion="3" />
  <uses-permission
    android:name="android.permission.INTERNET"></uses-permission>
  <uses-permission
    android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
</manifest>